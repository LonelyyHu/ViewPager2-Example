<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Pager"
        app:layout_constraintBottom_toTopOf="@+id/btn_stateful"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_stateful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stateful Pager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple"
        app:layout_constraintBottom_toTopOf="@id/btn_simple2" />

    <Button
        android:id="@+id/btn_simple2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Pager 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stateful"
        app:layout_constraintBottom_toTopOf="@id/btn_stateful2" />

    <Button
        android:id="@+id/btn_stateful2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stateful Pager 2"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>